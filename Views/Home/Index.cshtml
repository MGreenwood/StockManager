@using StockManager.Controllers
@{
    ViewData["Title"] = "All Users";
}
<div>
    <h2>
        Users
    </h2>

    @model List<HomeController.Customer>
    <div>
        <table>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        @{
            foreach (HomeController.Customer cust in Model)
            {
                <tr>
                    <td>@cust.fname </td>
                    <td>@cust.lname</td>
                    <td>
                    @{ 
                        if(!HomeController.isWorking)
                            @Html.ActionLink("View Portfolio", "UserView", new { custID = cust.id })
                    }
                    </td>
                </tr>
            }

        }
        </table>
    </div>

    <!-- If db empty -->
    @if (Model.Count() == 0)
    {
        <p>Nothing to show</p>
    }
</div>
